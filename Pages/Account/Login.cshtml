@page
@model DrivingSchoolApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="LoginInput.Email">Email</label>
                <input asp-for="LoginInput.Email" class="form-control" />
                <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LoginInput.Password">Password</label>
                <input asp-for="LoginInput.Password" class="form-control" />
                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="checkbox">
                    <label>
                        <input asp-for="LoginInput.RememberMe" /> @Html.DisplayNameFor(m => m.LoginInput.RememberMe)
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Log in</button>
            <div class="mt-3">
                <p>
                    Don't have an account? <a asp-page="./Register">Register here</a>
                </p>
            </div>
        </form>
    </div>
</div>