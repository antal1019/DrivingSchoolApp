@page
@model DrivingSchoolApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.FirstName"></label>
                <input asp-for="RegisterInput.FirstName" class="form-control" />
                <span asp-validation-for="RegisterInput.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.LastName"></label>
                <input asp-for="RegisterInput.LastName" class="form-control" />
                <span asp-validation-for="RegisterInput.LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.Email"></label>
                <input asp-for="RegisterInput.Email" class="form-control" />
                <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.Phone"></label>
                <input asp-for="RegisterInput.Phone" class="form-control" />
                <span asp-validation-for="RegisterInput.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.Password"></label>
                <input asp-for="RegisterInput.Password" class="form-control" />
                <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.ConfirmPassword"></label>
                <input asp-for="RegisterInput.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterInput.Role"></label>
                <select asp-for="RegisterInput.Role" class="form-control">
                    <option value="">Choose your role</option>
                    <option value="Student">Student</option>
                    <option value="Instructor">Instructor</option>
                </select>
                <span asp-validation-for="RegisterInput.Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
            <div class="mt-3">
                <p>
                    Already have an account? <a asp-page="./Login">Log in here</a>
                </p>
            </div>
        </form>
    </div>
</div>